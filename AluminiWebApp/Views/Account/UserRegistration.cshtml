<script>
    $(function () {
        $("#DOB").datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: 'dd/mm/yy'
        });
    });


    $(document).ready(function () {
        $('#DOB').change(function () {
            $('#DOB').datepicker("option", "dateFormat", "dd/mm/yy");
            var DOB = $('#DOB').datepicker("option", "dateFormat", "dd/mm/yy");
            $('#DOB').val($('#DOB').val());
            $('#Dateofbirth').val($('#DOB').val());
        });
    });
</script>