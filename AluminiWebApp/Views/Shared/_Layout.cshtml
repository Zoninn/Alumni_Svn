<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Scripts.Render("~/bundles/jquery")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    }
    @Scripts.Render("~/Scripts/jquery.validate.js")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.js")
    <script type="text/javascript">
        function hideThis(step) {
            if (step == 1) {
                $('#RegistrationStep1').hide();
            }
            else if (step == 2) {
                $('#RegistrationStep2').hide();
            }
            else {
                $('#RegistrationStep3').hide();
            }
        }
        function showThis(step) {
            if (step == 1) {
                $('#RegistrationStep1').show();
                $('#RegistrationStep2').hide();
                $('#RegistrationStep3').hide();
            }
            else if (step == 2) {
                $('#RegistrationStep2').show();
                $('#RegistrationStep1').hide();
                $('#RegistrationStep3').hide();
            }
            else {
                $('#RegistrationStep3').show();
                $('#RegistrationStep1').hide();
                $('#RegistrationStep2').hide();
            }
        }
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Custom.js/Registration.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
