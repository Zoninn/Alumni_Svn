@model AluminiWebApp.Models.StudentRegistrationModel
@{
    ViewBag.Title = "UpdateAlumni";
    Layout = "~/Views/Shared/_SRKRDesignLayout.cshtml";
}
<div style="display:none;position:fixed;top:0;left:0;width:100%;height:100%;background:rgba(0,0,0,0.3);z-index:999999999;" id="SteudentDivelent">
    <img src="~/Content/img/loading_apple.gif" width="50" style="position:absolute;top:49%;left:49%;" />
</div>
<section id="nicdark_parallax_title" class="nicdark_section nicdark_imgparallax nicdark_parallaxx_img8" style="background-position: 50% 0px;">

    <div class="nicdark_filter greydark">

        <!--start nicdark_container-->
        <div class="nicdark_container nicdark_clearfix">

            <div class="grid grid_12">
                <div class="nicdark_space100"></div>
                <div class="nicdark_space100"></div>
                <h1 class="white subtitle">Update Batch details</h1>
                <div class="nicdark_space10"></div>
                <div class="nicdark_divider left big"><span class="nicdark_bg_white nicdark_radius"></span></div>
                <div class="nicdark_space40"></div>
                <div class="nicdark_space50"></div>
            </div>

        </div>
        <!--end nicdark_container-->

    </div>

</section>


    @using (Html.BeginForm())
    {
        <section class="nicdark_section">
            <div class="nicdark_container nicdark_clearfix">
                <div class="nicdark_space50"></div>
                <div class="grid grid_12">
                    <h3 class="subtitle greydark">CREATE ACCOUNT</h3>
                    <div class="nicdark_space20"></div>
                    <div class="nicdark_divider left small"><span class="nicdark_bg_yellow nicdark_radius"></span></div>
                </div>
                <div class="grid grid_12">

                    <!--start nicdark_tabs-->
                    <div class="nicdark_tab ui-tabs ui-widget ui-widget-content ui-corner-all">

                        <ul class="nicdark_tabslist ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all" role="tablist">
                            <a href="@Url.Action("BasicInformation", "AlumniProfileUpdate", new { area = "" })" class="nicdark_btn nicdark_bg_green medium nicdark_shadow nicdark_radius white nicdark_margin10"><i class="icon-pencil-1"></i>&nbsp;&nbsp;&nbsp;Basic Information</a>
                            <a href="@Url.Action("UpdateAlumni", "AlumniProfileUpdate", new { area = "" })" class="nicdark_btn nicdark_bg_blue medium nicdark_shadow nicdark_radius white nicdark_margin10" style="background-color:#b4dde7"><i class="icon-pencil-1"></i>&nbsp;&nbsp;&nbsp;Batch Details</a>
                            <a href="@Url.Action("ContactInformation", "AlumniProfileUpdate", new { area = "" })" class="nicdark_btn nicdark_bg_orange medium nicdark_shadow nicdark_radius white nicdark_margin10"><i class="icon-pencil-1"></i>&nbsp;&nbsp;&nbsp;Location/Contact Information</a>
                            <a href="@Url.Action("ProfessionalDetails", "AlumniProfileUpdate", new { area = "" })" class="nicdark_btn nicdark_bg_red medium nicdark_shadow nicdark_radius white nicdark_margin10"><i class="icon-pencil-1"></i>&nbsp;&nbsp;&nbsp;Professional Details</a>

                        </ul>

                        <div class="nicdark_tabs nicdark_bg_grey nicdark_radius nicdark_shadow">

                            <div class="nicdark_margin20 ui-tabs-panel ui-widget-content ui-corner-bottom" id="tabs-7" aria-labelledby="ui-id-4" role="tabpanel" aria-expanded="true" aria-hidden="false" style="display: inline-block;">
                                <div class="nicdark_clearfix">

                                    <div class="nicdark_focus nicdark_width_percentage25">
                                        <div class="nicdark_marginleft20 nicdark_disable_marginleft_iphoneland nicdark_disable_marginleft_iphonepotr">
                                            @Html.DropDownListFor(x => x.CourseCategoryId, new SelectList(Model.Coursecategorys, "Id", "CourseCategoryName"), "Select Degree", new { @class = "nicdark_bg_grey2 nicdark_radius nicdark_shadow grey medium subtitle", required = "required" })
                                            @Html.ValidationMessageFor(x => x.CourseCategoryId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="nicdark_focus nicdark_width_percentage25">
                                        <div class="nicdark_marginleft20 nicdark_disable_marginleft_iphoneland nicdark_disable_marginleft_iphonepotr">
                                            <select id="ddlCourses" class="nicdark_bg_grey2 nicdark_radius nicdark_shadow grey medium subtitle" name="CourseId" required="required" style="width:200px">
                                                <option value="">Select Course</option>
                                            </select>
                                            @Html.ValidationMessageFor(x => x.CourseId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="nicdark_focus nicdark_width_percentage25">
                                        <div class="nicdark_marginleft20 nicdark_disable_marginleft_iphoneland nicdark_disable_marginleft_iphonepotr">
                                            <select id="ddlGraduationYear" class="nicdark_bg_grey2 nicdark_radius nicdark_shadow grey medium subtitle" name="Batch" required="required" style="width:200px">
                                                <option value="">Select joining year</option>
                                            </select>
                                            @Html.ValidationMessageFor(x => x.Batch, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="nicdark_focus nicdark_width_percentage25">
                                        <div class="nicdark_focus">
                                            <div class="nicdark_disable_marginleft_iphoneland nicdark_disable_marginleft_iphonepotr">
                                                <input class="nicdark_btn nicdark_bg_yellow medium nicdark_shadow nicdark_radius white nicdark_press right" type="submit" value="Save">
                                               
                                            </div>
                                            
                                        </div>
                                    </div>
                                    <div>
                                        <br />
                                        <h3>@TempData["Message"]</h3>
                                    </div>
                                </div>
                                <div class="nicdark_space10"></div>


                            </div>


                        </div>

                    </div>
                    <!--end nicdark_tabs-->

                </div>
            </div>
        </section>


    }
    @Scripts.Render("~/Custom.js/Registration.js")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnRegisterAlumni").click(function () {
                window.location.href = "../profile/RegisterAsFaculty";
            });

            BindCoyrses(@Model.CourseCategoryId);
        });
        function BindCoyrses(DegreeId) {
            $.ajax({
                type: "Get",
                dataType: "json",
                url: "../Account/GetCourses?CourseCategoryId=" + DegreeId,
                contentType: "Application/json",
                data: {},
                success: function (data) {
                    $.each(data, function (key, value) {
                        $("#ddlCourses").append($("<option></option>").val(value.Id).html(value.CourseName));
                    });
                    $("#ddlCourses").val(@Model.CourseId);
                }

            });

            $.ajax({
                type: "Get",
                dataType: "json",
                url: "../Account/GetYears?CourseId=" + @Model.CourseId,
                contentType: "Application/json",
                data: {},
                success: function (data) {                
                    $.each(data, function (key, value) {
                        $("#ddlGraduationYear").append($("<option></option>").val(value.Year).html(value.Year));
                    });
                    $("#ddlGraduationYear").val(@Model.Batch);
                }
            });
        }
    </script>
