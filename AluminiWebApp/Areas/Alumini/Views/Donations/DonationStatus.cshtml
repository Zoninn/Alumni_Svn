@model AluminiWebApp.Areas.Admin.Models.DonationModel

@{
    ViewBag.Title = "DonationStatus";
    int UserId = 0;
    if (Session["UserRole"] != null)
    {
        UserId = Convert.ToInt32(Session["UserId"]);
        if (Session["UserRole"].ToString() == "Alumini")
        {
            Layout = "~/Areas/Alumini/Views/Shared/_SRKRLayout.cshtml";
        }
        else if (Session["UserRole"].ToString() == "Faculty")
        {
            Layout = "~/Areas/Faculty/Views/Shared/_SRKRLayout.cshtml";
        }
    }
    else
    {
        <script type="text/javascript">
            window.location.href = "../../../Account/Login/3";
        </script>
    }
}

<div style="width:50%;align:center">
    <h2>Donation Status</h2>

    Dear @ViewBag.DonorName,<br />
    <br />

    <h4>On behalf of <u>@ViewBag.DonationTitle</u>, I would like to thank you for your donation of Rs. <u>@ViewBag.Amount</u> made on @ViewBag.Date  </h4>

    Thank you once again for your support.


    </div>



