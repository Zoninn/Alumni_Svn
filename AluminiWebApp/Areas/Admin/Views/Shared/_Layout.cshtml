<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Alumini", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <div>
                    @* <a href="@Url.Action("LogOff", "Account", new { area="",@class="btn btn-primary" })" class="loginLink">Logout</a>*@
                </div>
            </div>
            @*<div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav"></ul>
                </div>*@


        </div>
    </div>
    <div class="row well">

        @Html.ActionLink("User Approvals", "Index", "UserRegistrations", new { area = "Admin" }, new { @class = "btn btn-info" })
        @Html.ActionLink("Create Event", "CreateEvent", "Events", new { area = "Admin" }, new { @class = "btn btn-info" })
        @Html.ActionLink("Event Payments", "EventPayments", "Events", new { area = "Admin" }, new { @class = "btn btn-info" })
        @Html.ActionLink("Job Approvals", "PendingJobs", "Jobs", new { area = "Admin" }, new { @class = "btn btn-info" })
        @Html.ActionLink("White Board", "WhiteBoard", "WhiteBoard", new { area = "Admin" }, new { @class = "btn btn-info" })
        @Html.ActionLink("News Room", "PostNews", "NewsRoom", new { area = "Admin" }, new { @class = "btn btn-info" })
        @Html.ActionLink("Memories", "Memories", "Memories", new { area = "Admin" }, new { @class = "btn btn-info" })
        @Html.ActionLink("Gallery", "Gallery", "Gallery", new { area = "Admin" }, new { @class = "btn btn-info" })
        <a href="@Url.Action("LogOff", "Account", new { area="",@class="btn btn-primary" })" class="btn btn-primary pull-right">Logout</a>
    </div>
    <div>     
      
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Custom.js/jquery-1.10.2.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>